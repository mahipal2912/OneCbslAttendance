<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_header_con"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Employee Name"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:text="Movement Id"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:text="Voucher"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Date"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="From Location"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="To Location "
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Transport Mode"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Fare"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Fooding"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Total Expense"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="KM"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Attachment "
            android:textColor="@color/white">

        </TextView>


        <TextView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Remark"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:text="Approved Amt."
            android:textColor="@color/white" />

        <TextView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="H.O.D. Remarks"
            android:textColor="@color/white" />


        <LinearLayout
            android:id="@+id/ll_pending_hod_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/shape_header"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Select Status"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/shape_header"
                android:gravity="center"
                android:padding="@dimen/_2sdp"
                android:text="Submit"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:gravity="center|center_vertical">

        <TextView
            android:id="@+id/tv_emp_name"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/tv_movement_code"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tv_vouchers"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tv_dates"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:textColor="@color/black">

        </TextView>


        <TextView
            android:id="@+id/tv_from_locations"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tv_to_locations"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tv_transport_modes"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/purple_200">

        </TextView>

        <TextView
            android:id="@+id/tv_fares"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tv_fooding"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tv_totalexpense"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tv_km"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tv_img_url"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/purple_200">

        </TextView>

        <TextView
            android:id="@+id/tv_remarks"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/tv_approve_amts"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:inputType="number"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:textColor="@color/black">

        </EditText>


        <EditText
            android:id="@+id/tv_hod_remarkss"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/ll_hod_conveyance_update"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/shape_column"
                android:padding="@dimen/_2sdp">

                <Spinner
                    android:id="@+id/spin_setStatus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/shape_column"
                android:gravity="center"
                android:padding="@dimen/_2sdp">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_gravity="center"
                    android:background="@color/purple_200"
                    android:text="Update"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
