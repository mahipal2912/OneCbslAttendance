<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Date"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:padding="@dimen/_2sdp"
            android:gravity="center"
            android:text="Punch In"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:background="@drawable/shape_header"
            android:padding="@dimen/_2sdp"
            android:text="Punch Out"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_header"
            android:padding="@dimen/_2sdp"
            android:gravity="center"
            android:text="PunchIn Location"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:background="@drawable/shape_header"
            android:padding="@dimen/_2sdp"
            android:text="PunchOut Location"
            android:textColor="@color/white" />
<TextView
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:background="@drawable/shape_header"
            android:padding="@dimen/_2sdp"
            android:text="Sync Response"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="@dimen/_100sdp"
            android:gravity="center"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/shape_header"
            android:padding="@dimen/_2sdp"
            android:text="Sync Date"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvPunchDate"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tvPunchIn"
            android:layout_width="@dimen/_70sdp"
            android:gravity="center"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tvPunchOut"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:background="@drawable/shape_column"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:background="@drawable/shape_column"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvOutAddress"
            android:layout_width="@dimen/_280sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/shape_column"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/syncStatus"
            android:layout_width="@dimen/_250sdp"
            android:gravity="center"
            android:layout_height="@dimen/_30sdp"

            android:background="@drawable/shape_column"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/syncDate"
            android:layout_width="@dimen/_100sdp"
            android:gravity="center"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/shape_column"
            android:padding="@dimen/_2sdp"
            android:singleLine="true"
            android:textColor="@color/black"/>


    </LinearLayout>

</LinearLayout>
