<resources>
    <!-- Base application theme. -->
    <style name="Theme.CbslAttendance" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.CbslAttendance.Fullscreen" parent="Theme.CbslAttendance">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
    <style name="Theme.CbslAttendance.Fullscreen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CbslAttendance.Fullscreen.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CbslAttendance.Fullscreen.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.MyApp.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">@style/Widget.MyApp.NavigationView.ItemTextAppearance</item>
    </style>

    <!-- Custom text appearance for navigation drawer items -->
    <style name="Widget.MyApp.NavigationView.ItemTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item> <!-- Adjust text size -->
        <item name="android:fontFamily">@font/montserrat_regular
        </item> <!-- Replace with your custom font -->
        <item name="android:textStyle">bold</item> <!-- Customize text style -->
        <item name="android:textColor">@color/purple_200</item> <!-- Customize text color -->
    </style>

    <!-- Custom style for NavigationView item icon size -->
    <style name="Widget.MyApp.NavigationView.ItemIconSize">
        <item name="android:layout_width">24dp</item> <!-- Adjust icon size -->
        <item name="android:layout_height">24dp</item> <!-- Adjust icon size -->
    </style>
    <style name="NavigationDrawerStyle">

        <item name="android:textSize">@dimen/_12sdp</item><!-- text size in menu-->

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">50dp</item>
        <item name="listPreferredItemHeightSmall">50dp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">8dp</item>
        <item name="listPreferredItemPaddingLeft">8dp</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">8dp</item>
        <item name="listPreferredItemPaddingRight">8dp</item>
    </style>
</resources>